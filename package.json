{
  "name": "gpt-token-counter-live",
  "displayName": "Live LLM Token Counter",
  "description": "Live Token Counter for Language Models",
  "version": "1.4.0",
  "publisher": "bedirt",
  "author": {
    "name": "BedirT"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:gpt-token-counter-live.countTokens",
    "onCommand:gpt-token-counter-live.changeModel",
    "onCommand:gpt-token-counter-live.toggleHighlight",
    "onCommand:gpt-token-counter-live.configureHighlights",
    "onLanguage:plaintext",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#00c864",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "main": "./src/extension.js",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/microsoft/vscode-wordcount/issues",
    "email": "bedirtpkn@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BedirT/LLM-Token-Counter-VSCode"
  },
  "dependencies": {
    "@anthropic-ai/tokenizer": "^0.0.4",
    "tiktoken": "^1.0.22"
  },
  "contributes": {
    "commands": [
      {
        "command": "gpt-token-counter-live.countTokens",
        "title": "Count Tokens"
      },
      {
        "command": "gpt-token-counter-live.changeModel",
        "title": "Change Model Family"
      },
      {
        "command": "gpt-token-counter-live.toggleHighlight",
        "title": "Toggle Token Highlighting"
      },
      {
        "command": "gpt-token-counter-live.configureHighlights",
        "title": "Configure Token Highlight Colors"
      }
    ],
    "configuration": {
      "title": "Live LLM Token Counter",
      "properties": {
        "gpt-token-counter-live.defaultModelFamily": {
          "type": "string",
          "enum": [
            "openai",
            "anthropic",
            "gemini"
          ],
          "default": "openai",
          "markdownDescription": "Model family selected by default when the extension activates."
        },
        "gpt-token-counter-live.statusBarDisplayTemplate": {
          "type": "string",
          "default": "Token Count: {count} ({family})",
          "markdownDescription": "Template used for the status bar text. Supported placeholders: `{count}`, `{family}`, `{provider}` (alias `{model}` for family)."
        }
      }
    }
  },
  "keywords": [
    "GPT",
    "OpenAI",
    "Claude",
    "Anthropic",
    "Gemini",
    "Google AI",
    "Token",
    "Counter",
    "LLM",
    "Language Model"
  ],
  "homepage": "https://github.com/BedirT/LLM-Token-Counter-VSCode/blob/main/README.md"
}
